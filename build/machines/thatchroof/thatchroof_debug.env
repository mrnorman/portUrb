#!/bin/bash

export HDF5_PATH=`which h5cc | xargs dirname`/..
export NETCDF_C_PATH=`nc-config --includedir`/..
export PNETCDF_PATH=`pnetcdf-config --includedir`/..

export PORTURB_HOME=`pwd`/..
export PORTURB_ARCH=serial
export PORTURB_DEBUG=OFF
export PORTURB_CXX_FLAGS="-O0;-g;-I$PNETCDF_PATH/include;-I$NETCDF_C_PATH/include;-I$HDF5_PATH/include"
export PORTURB_F90_FLAGS="-O0 -g -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export PORTURB_LINK_FLAGS="`nc-config --libs` -L$PNETCDF_PATH/lib -lpnetcdf -L$HDF5_PATH/lib -lhdf5"

export CC=mpicc
export CXX=mpic++
export FC=mpif90

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

