#!/bin/bash

source ${MODULESHOME}/init/bash
module reset
module load PrgEnv-amd cray-parallel-netcdf cmake craype-accel-amd-gfx90a cray-hdf5 cray-netcdf

export ROCM_PATH=${CRAY_AMD_COMPILER_PREFIX}

export CC=cc
export FC=ftn
export CXX=CC

export MPICH_GPU_SUPPORT_ENABLED=1
unset HSA_XNACK

export PORTURB_BACKEND="Kokkos_ENABLE_HIP"
export PORTURB_ARCH="Kokkos_ARCH_AMD_GFX90A"
export PORTURB_CXX_FLAGS="-DPORTURB_GPU_AWARE_MPI;-DPORTURB_FUNCTION_TIMERS;-O1;-g;-ffast-math;-I${ROCM_PATH}/include;-D__HIP_ROCclr__;-D__HIP_ARCH_GFX90A__=1;--rocm-path=${ROCM_PATH};--offload-arch=gfx90a;-Wno-unused-result;-Wno-macro-redefined"
export PORTURB_F90_FLAGS="-O0;-g;-DSCREAM_DOUBLE_PRECISION"
export PORTURB_LINK_FLAGS="--rocm-path=${ROCM_PATH};-L${ROCM_PATH}/lib;-lamdhip64"
export PORTURB_DEBUG=ON

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

